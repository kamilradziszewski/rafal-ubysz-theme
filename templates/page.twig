{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
    <article class="post-type-{{post.post_type}} row align-center"
             id="post-{{post.ID}}">
			<section class="article-content columns small-11 medium-8">
				<h1 class="article-h1">{{post.title}}</h1>
				<div class="article-body {{ post.slug }}">
					{{post.content}}
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
